<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0</TargetFrameworks>
    <Version>6.0.1</Version>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <IncludeSymbols>True</IncludeSymbols>
    <IncludeSource>True</IncludeSource>
    <PackageProjectUrl>https://github.com/threax/HtmlRapier.TagHelpers</PackageProjectUrl>
    <RepositoryUrl>https://github.com/threax/HtmlRapier.TagHelpers</RepositoryUrl>
    <Authors>Andrew Piper</Authors>
    <PackageLicenseUrl>https://github.com/threax/HtmlRapier.TagHelpers/blob/master/LICENSE</PackageLicenseUrl>
    <PackageReleaseNotes>Added support for bootstrap 4 to the tag helpers. However, you must now register the tag helpers and specify your version or you will get runtime errors.
6.0.1 - Removed need for fontawesome.</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Mvc" Version="2.0.1" />
  </ItemGroup>
  
</Project>